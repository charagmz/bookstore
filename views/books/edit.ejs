<%- include ../layouts/head.ejs %> 
<br /><br />
<div class="card">
    <div class="card-header">
        Formulario de captura
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar datos del libro</h5>
        <p class="card-text">
            <form method="post" action="../update/" enctype="multipart/form-data">
                <input type="hidden" name="id" value="<%= book.id%>">
                <div class="form-group">
                    <label for="my-input">Nombre:</label>
                    <input id="my-input" value="<%= book.name%>" class="form-control" type="text" name="name">
                </div>
                <div class="form-group">
                    <label for="my-input">Imagen</label>
                    <img class="img-thumbnail" src="../../images/<%= book.image%>" width="100" alt="">
                    <input id="my-input" class="form-control-file" type="file" name="image">
                </div>
                <button class="btn btn-success" type="submit">Actualizar</button>
                <a class="btn btn-primary" href="/books">Cancelar</a>
            </form>
        </p>
    </div>
</div>
<%- include ../layouts/foot.ejs %> 
